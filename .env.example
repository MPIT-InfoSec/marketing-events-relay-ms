# Application
APP_NAME="Marketing Events Relay"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (MySQL)
DATABASE_URL=mysql+aiomysql://root:password@localhost:3306/marketing_events_relay
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_RECYCLE=3600

# Security
# Basic Auth credentials for API access
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=changeme123

# Fernet encryption key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=

# Event Processing
MAX_RETRY_ATTEMPTS=5
RETRY_BACKOFF_BASE=60
EVENT_BATCH_SIZE=100

# HTTP Client
HTTP_TIMEOUT=30
HTTP_MAX_CONNECTIONS=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
